<table border="1">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Amount</th>
    <th>Date</th>
    </tr>

    <% @search.result.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= record.email %></td>
        <td><%= record.amount %></td>
        <td><%= record.date %></td>
        </tr>
        <% end %>
  
</table>
